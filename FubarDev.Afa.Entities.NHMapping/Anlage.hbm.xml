<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="FubarDev.Afa.Entities" namespace="FubarDev.Afa.Entities">
  <class name="Anlage">
    <id name="Konto" length="7">
      <generator class="assigned" />
    </id>
    <property name="Text1" length="30" not-null="true" />
    <property name="Text2" length="30" />
    <property name="Anzahl" not-null="true" />
    <property name="Kostenstelle" length="10" />
    <property name="Anschaffungswert" not-null="true" />
    <property name="Anschaffungsdatum" not-null="true" />
    <property name="Abgangsdatum" />
    <property name="Zuordnung" />
    <property name="AktivesJahr" not-null="true" />
    
    <map name="Abschreibungen" lazy="true" generic="true" cascade="all-delete-orphan">
      <key column="Konto" not-null="true" />
      <map-key column="Jahr" type="System.Int32" node="true" />
      <one-to-many class="Abschreibung"/>
    </map>
  </class>
</hibernate-mapping>
